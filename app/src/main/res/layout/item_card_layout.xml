<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="90dp"
    android:background="#edede0"
    android:padding="15dp"
    android:layout_margin="15dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#bed0e4"
    android:gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B+"
        android:textColor="#d91515"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/card_blood_group"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arif Ahmed"
        android:textColor="#3731da"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:id="@+id/view_patient_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Familly ward , Bed no. 16 , CMH , Dhaka Cantonment , Dhaka- 1206."
        android:textColor="#3f3459"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:id="@+id/view_patient_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : 12-01-1996"
        android:textColor="#3f3459"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:id="@+id/view_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone : +0178xxxxxxx"
        android:textColor="#3f3459"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:id="@+id/view_patient_phone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:layout_margin="10dp"
        android:background="@drawable/button_style_red"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="5dp"
        android:textSize="19sp"
        android:id="@+id/view_button_call"/>

</LinearLayout>


</android.support.v7.widget.CardView>